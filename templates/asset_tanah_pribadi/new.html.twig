{% extends 'base.html.twig' %}

{% block title %}Add Asset Tanah Pribadi{% endblock %}
{% set HeaderTitle = 'Asset Tanah Pribadi' %}
{% set FormTitle =  'Tambah Asset Tanah Pribadi'%}
{% set description = 'Tambah data Asset Tanah Pribadi ' %}

{% block body %}
  {{ include('asset_tanah_pribadi/_form.html.twig', {'button_label': 'Submit'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/src/Scripts/asset_tanah_pribadi/_form.js"></script>
    <script>
        InitProvinsi();
        InitMadya();
        InitKecamatan();
        InitDesa();

        $("#frmSubmit").validate({
          ignore: [],
          errorClass: "invalid-feedback animated fadeInDown",
          errorElement: "div",
          errorPlacement: function (e, r) {
              jQuery(r).parents(".form-group").append(e);
          },
          highlight: function (e) {
              jQuery(e).closest(".form-group").removeClass("is-invalid").addClass("is-invalid");
              HideHeaderLoader();
          },
          success: function (e) {
              jQuery(e).closest(".form-group").removeClass("is-invalid"), jQuery(e).remove();
          },
          rules: {
              "asset_tanah_pribadi[no_shm]": { required: true},
              "asset_tanah_pribadi[status_pembayaran]": { required: true},
              "asset_tanah_pribadi[provinsi]": { required: true},
              "asset_tanah_pribadi[kabupaten_kota]": { required: true},
              "asset_tanah_pribadi[kecamatan]": { required: true},
              "asset_tanah_pribadi[desa]": { required: true},
          },
          messages: {
              "asset_tanah_pribadi[no_shm]": { required: "Field ini mandatory"},
              "asset_tanah_pribadi[status_pembayaran]": { required: "Field ini mandatory"},
              "asset_tanah_pribadi[provinsi]": { required: "Field ini mandatory"},
              "asset_tanah_pribadi[kabupaten_kota]": { required: "Field ini mandatory"},
              "asset_tanah_pribadi[kecamatan]": { required: "Field ini mandatory"},
              "asset_tanah_pribadi[desa]": { required: "Field ini mandatory"},
          },
      });
    </script>
{% endblock %}
