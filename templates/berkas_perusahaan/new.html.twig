{% extends 'base.html.twig' %}

{% block title %}Add Attachment Perusahaan{% endblock %}
{% set HeaderTitle = 'Attachment Perusahaan' %}
{% set FormTitle =  'New Attachment Perusahaan'%}
{% set description = 'Add Attachment Perusahaan ' %}
{% set labelBreadcrumb = 'New' %}

{% block body %}
   {{ include('berkas_perusahaan/_form.html.twig', {'button_label': 'Submit'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
     $("#frmSubmit").validate({
            ignore: [],
            errorClass: "invalid-feedback animated fadeInDown",
            errorElement: "div",
            errorPlacement: function (e, r) {
                jQuery(r).parents(".form-group").append(e);
            },
            highlight: function (e) {
                jQuery(e).closest(".form-group").removeClass("is-invalid").addClass("is-invalid");
                HideHeaderLoader();
            },
            success: function (e) {
                jQuery(e).closest(".form-group").removeClass("is-invalid"), jQuery(e).remove();
            },
            rules: {
                "berkas_perusahaan[deskripsi]": { required: true},
                "berkas_perusahaan[nama_perusahaan]": { required:true},
                "berkas_perusahaan[attach_filename]": { required: true},
                
            },
            messages: {
                "berkas_perusahaan[deskripsi]": { required: "Field ini mandatory"},
                "berkas_perusahaan[nama_perusahaan]": {required: "Field ini mandatory"},
                "berkas_perusahaan[attach_filename]": { required: "Field ini mandatory"},
            },
      });
    </script>
{% endblock %}
