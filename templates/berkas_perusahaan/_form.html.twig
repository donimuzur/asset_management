<!-- Page Content -->
<div class="content">
    <nav class="breadcrumb bg-white push">
        <a class="breadcrumb-item" href="{{ path('asset_kendaraan_mobil_index') }}">Attachment Perusahaan</a>
        <span class="breadcrumb-item active">{{ labelBreadcrumb }}</span>
    </nav>
    {{ include('_globalMessage.html.twig') }}
    <!-- Material Design -->
    <div class="row">
        <div class="col-md-12">
            <!-- Static Labels -->
            <div class="block">
                <div class="block-header block-header-default">
                    <h3 class="block-title">{{ FormTitle }}</h3>
                </div>
                <div class="block-content">
                    <form id="frmSubmit"  method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    {{ form_widget(form.deskripsi, {'attr': {'class': 'form-control','placeholder':'Input your value'}})}}
                                    <label>Deskripsi: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material input-group input-group-lg">
                                    {{ form_widget(form.perusahaan, {'attr': {'class': 'form-control','placeholder':'Input your value'}})}}
                                    <label>Perusahaan: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label>Upload File:</label>
                                <div>
                                    <div class="custom-file">
                                        {{ form_widget(form.attach_filename, {'attr': {'class': 'custom-file-input','data-toggle':"custom-file-input",'placeholder':'Input your value'}})}}
                                        <label class="custom-file-label" for="example-file-input-custom">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                         {{ form_rest(form) }}
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-alt-primary mr-5">{{ button_label|default('Submit') }}</button>
                                <a href="{{ path('berkas_perusahaan_index') }}" class="btn btn-alt-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Static Labels -->
        </div>
    </div>
    <!-- END Material Design -->
</div>
<!-- END Page Content -->
      