{% extends 'base.html.twig' %}

{% block title %}Add Asset Tanah Perusahaan{% endblock %}
{% set HeaderTitle = 'Asset Tanah Perusahaan' %}
{% set FormTitle =  'Tambah Asset Tanah Perusahaan'%}
{% set description = 'Tambah data Asset Tanah Perusahaan ' %}

{% block body %}
  {{ include('asset_tanah_perusahaan/_form.html.twig', {'button_label': 'Submit'}) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/src/Scripts/asset_tanah_perusahaan/_form.js"></script>
    <script>
        InitProvinsi();
        InitMadya();
        InitKecamatan();
        InitDesa();

        $("#frmSubmit").validate({
            ignore: [],
            errorClass: "invalid-feedback animated fadeInDown",
            errorElement: "div",
            errorPlacement: function (e, r) {
                jQuery(r).parents(".form-group").append(e);
            },
            highlight: function (e) {
                jQuery(e).closest(".form-group").removeClass("is-invalid").addClass("is-invalid");
                HideHeaderLoader();
            },
            success: function (e) {
                jQuery(e).closest(".form-group").removeClass("is-invalid"), jQuery(e).remove();
            },
            rules: {
                "asset_tanah_perusahaan[no_shm]": { required: true},
                "asset_tanah_perusahaan[luasan]": { digits:true},
                "asset_tanah_perusahaan[status_pembayaran]": { required: true},
                "asset_tanah_perusahaan[provinsi]": { required: true},
                "asset_tanah_perusahaan[kabupaten_kota]": { required: true},
                "asset_tanah_perusahaan[kecamatan]": { required: true},
                "asset_tanah_perusahaan[desa]": { required: true},
            },
            messages: {
                "asset_tanah_perusahaan[no_shm]": { required: "Field ini mandatory"},
                "asset_tanah_perusahaan[luasan]": { digits: "Harus diisi angka"},
                "asset_tanah_perusahaan[status_pembayaran]": { required: "Field ini mandatory"},
                "asset_tanah_perusahaan[provinsi]": { required: "Field ini mandatory"},
                "asset_tanah_perusahaan[kabupaten_kota]": { required: "Field ini mandatory"},
                "asset_tanah_perusahaan[kecamatan]": { required: "Field ini mandatory"},
                "asset_tanah_perusahaan[desa]": { required: "Field ini mandatory"},
            },
      });
    </script>
{% endblock %}
