<!-- Page Content -->
<div class="content" >
    <!-- Material Design -->
    <h2 class="content-heading">Attachment</h2>
    <div class="row" id="addPaneAttachments" style="display:none">
        <div class="col-md-6">
            <div class="block">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Add New Attachment</h3>
                </div>
                <div class="block-content">
                    <form method="post" action={{ path('asset_tanah_perusahaan_update_attachment')}}  enctype="multipart/form-data" >
                        <input type="hidden" name="_token" value="{{ csrf_token('AttachmentAssetTanahPerusahaan') }}"/>
                        <div class="row">
                            <div class="form-group col-12">
                                <div class="form-material">
                                    <textarea class="form-control" id="description" name="description" rows="3" placeholder="Please add a Description"></textarea>
                                    <label>Description:</label>
                                </div>
                            </div>
                            <div class="form-group col-12">
                                <label>Upload File:</label>
                                <div>
                                    <div class="custom-file">
                                        <input type="hidden" name="AttachmentId"/>
                                        <input type="hidden" name="AssetTanahPerusahaanId" value="{{ asset_tanah_perusahaan.id }}"/>
                                        <input type="file" name='ufile' id="ufile" class="custom-file-input" data-toggle="custom-file-input">
                                        <label class="custom-file-label" for="example-file-input-custom">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-alt-primary mr-5">Add</button>
                                <button type="button" id='btnCancelAttachment' class="btn btn-secondary">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Static Labels -->
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <!-- Static Labels -->
            <div class="block">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Attacment List</h3>
                </div>
                <div class="block-content">
                    <form method="post"  action='{{ path('asset_tanah_perusahaan_attacment_delete') }}' id='frmEmpDelAttachments'>
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="AssetTanahPerusahaanId" value="{{ asset_tanah_perusahaan.id }}"/>
                        <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                        <div class="row">
                            <div class="col-lg-6">
                                &nbsp;
                            </div>
                            <div id="attachmentActions"  class="col-lg-6" style="text-align: right;margin-bottom: 10px;">
                                <a class="btn btn-primary mg-x-10" id='btnAddAttachment' href="#addPaneAttachments">Add</a>
                                <button type="button" class="js-swal-confirm btn btn-danger" id='btnDeleteAttachment'>Delete</button>
                            </div>
                        </div>
                    
                        <div class="table-responsive">
                            <table class="table table-hover table-bordered mg-b-0" id="tblAttachments">
                                <thead>
                                    <tr>
                                        <th>
                                            <label class="ckbox mg-b-0" class='checkboxAtch'>
                                                <input type="checkbox" id='checkAll'><span></span>
                                            </label>
                                        </th>
                                        <th>File Name</th>
                                        <th>Description</th>
                                        <th>Attach By</th>
                                        <th>Attach Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% set attachment_asset_tanah_perusahaans =  asset_tanah_perusahaan.Attachment %}
                                    {% for attachment_asset_tanah_perusahaan in attachment_asset_tanah_perusahaans %}
                                        <tr>
                                            <td>
                                                <label class="ckbox mg-b-0" class='checkboxAtch'>
                                                    <input type='checkbox' class='checkbox chkAssetTanah' name='chkAssetTanah[]' value={{ attachment_asset_tanah_perusahaan.Id}}/><span></span>
                                                </label>    
                                            </td>
                                            <td><a href="{{ path('asset_tanah_perusahaan_download_attachment', {'id': attachment_asset_tanah_perusahaan.Id,'AssetTanahPerusahaanId':asset_tanah_perusahaan.id }) }}">{{ attachment_asset_tanah_perusahaan.getAttachFilename|default('')}}</a></td>
                                            <td>{{ attachment_asset_tanah_perusahaan.getAttachDesc}}</td>
                                            <td>{{ attachment_asset_tanah_perusahaan.getAttachedBy.getFullName|default('') }}</td>
                                            <td>{{ attachment_asset_tanah_perusahaan.attach_time|default( "now"|date("m/d/Y"))}}</td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END Material Design -->
</div>
<!-- END Page Content -->