{% extends 'base.html.twig' %}

{% block title %}Tambah Asset kendaraan Mobil{% endblock %}
{% set HeaderTitle = 'Master Perusahaan' %}
{% set FormTitle =  'Tambah Master Perusahaan'%}
{% set description = 'Tambah Master Perusahaan ' %}

{% block body %}
    {{ include('master_perusahaan/_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    
    <script>
      $("#frmSubmit").validate({
        ignore: [],
        errorClass: "invalid-feedback animated fadeInDown",
        errorElement: "div",
        errorPlacement: function (e, r) {
            jQuery(r).parents(".form-group").append(e);
        },
        highlight: function (e) {
            jQuery(e).closest(".form-group").removeClass("is-invalid").addClass("is-invalid");
            HideHeaderLoader();
        },
        success: function (e) {
            jQuery(e).closest(".form-group").removeClass("is-invalid"), jQuery(e).remove();
        },
        rules: {
            "master_perusahaan[nama_perusahaan]": { required: true, minlength: 3 },
            "master_perusahaan[Status]": { required: true},
        },
        messages: {
            "master_perusahaan[nama_perusahaan]": { required: "Field ini mandatory", minlength: "minimal 3 character" },
            "master_perusahaan[Status]": { required: "Field ini mandatory"},
        },
    });
    </script>
{% endblock %}