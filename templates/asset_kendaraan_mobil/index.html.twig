{% extends 'base.html.twig' %}

{% block title %}Asset Kendaraan Mobil List{% endblock %}
{% set HeaderTitle = 'Asset Kendaraan Mobil' %}
{% set FormTitle =  'Asset Kendaraan Mobil List'%}
{% set description = 'Add New user ' %}

{% block steylesheets %}
    <link rel="stylesheet" href="/assets/js/plugins/datatables/dataTables.bootstrap4.css">
{% endblock %}

{% block body %}
 <!-- Page Content -->
<div class="content">
    <!-- Material Design -->
    <h2 class="content-heading">{{ HeaderTitle }}</h2>
    <div class="block">
        <form method="post" action='{{ path('asset_kendaraan_mobil_delete') }}' id='frmEmpDelAttachments'>
            <div class="block-header block-header-default">
                <h3 class="block-title">{{ FormTitle }}</h3>
            </div>
            <div class="block-content block-content-full">
                <div class="col-lg-12" style="text-align: right;margin-bottom: 10px;">
                    <a class="btn btn-primary mg-x-10" href="{{ path('asset_kendaraan_mobil_new') }}">Create new</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <button type="button" class="js-swal-confirm btn btn-danger">Delete</button>
                </div>
                <table class="table table-bordered table-striped table-vcenter js-dataTable-full-pagination">
                    <thead>
                        <tr style="background: lightgray;">
                            <th>
                                <label class="ckbox mg-b-0">
                                    <input type="checkbox" id='checkAll'><span></span>
                                </label>
                            </th>
                            <th>Nomor Polisi</th>
                            <th>Nomer Mesin</th>
                            <th>VIN</th>
                            <th>Tahun Pajak</th>
                            <th>Type</th>
                            <th>PIC</th>
                            <th>Status</th>
                            <th class="text-center">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for asset_kendaraan_mobil in asset_kendaraan_mobils %}
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                            <tr>
                                <td>
                                    <label class="ckbox mg-b-0">
                                        <input type='checkbox' class='checkbox' name='chkAssetKendaraanMobil[]' value={{ asset_kendaraan_mobil.id}}/><span></span>
                                    </label>    
                                </td>
                                <td >{{ asset_kendaraan_mobil.PoliceNumber }}</td>
                                <td>{{ asset_kendaraan_mobil.EngineNumber }}</td>
                                <td>{{ asset_kendaraan_mobil.ChasisNumber }}</td>
                                <td>{{ asset_kendaraan_mobil.Tahun }}</td>
                                <td>{{ asset_kendaraan_mobil.Type }}</td>
                                <td>{{ asset_kendaraan_mobil.Pic }}</td>
                                <td>{{ asset_kendaraan_mobil.Status }}</td>
                                <td  class="text-center">
                                    <a href="{{ path('asset_kendaraan_mobil_edit', {'id': asset_kendaraan_mobil.id}) }}" class="btn btn-outline-primary btn-block"><i class="fa fa-pencil-square-o mg-r-10"></i> Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </form>
    </div>
    <!-- END Dynamic Table Full Pagination -->
</div>
<!-- End Page Content -->
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- Page JS Plugins -->
    <script src="/assets/js/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/assets/js/plugins/datatables/dataTables.bootstrap4.min.js"></script>

     <script>
       $(".js-dataTable-full-pagination").dataTable({
            scrollX:true,
            "searching": false,
            columnDefs: [{ "width": "200px", "targets": [2,3,4,6] },
                         { "width": "150px", "targets": [1] },
                         { "width": "100px", "targets": [5,7] }],
            pageLength: 8,
            lengthMenu: [
                [5, 8, 15, 20, 50],
                [5, 8, 15, 20, 50],
            ],
        });

        $("#checkAll").click(function(){
            if($("#checkAll:checked").length > 0) {
                $(".checkbox").prop('checked', true);
            } else {
                $(".checkbox").prop('checked', false);
            }
        });

        $(".checkbox").click(function() {
            $("#checkAll").prop('checked', false);
            if(($(".checkbox").length) == $(".checkbox:checked").length) {
                $("#checkAll").prop('checked', true);
            }
            
        });
    </script>
{% endblock %}




