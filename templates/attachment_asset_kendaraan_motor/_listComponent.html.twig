<div class="am-pagebody" id="addPaneAttachments" style="display:none">
     <div class="card pd-20 pd-sm-40">
        <h6 class="card-body-title">Add Attachment</h6>
        <p class="mg-b-20 mg-sm-b-30">Add New Attachment</p>
        <form method="post" action={{ path('asset_kendaraan_motor_update_attachment')}}  enctype="multipart/form-data" >
            <div class="form-layout">
                <div class="row mg-b-25">
                    <div class="col-lg-4">
                        <input type="hidden" name="_token" value="{{ csrf_token('AttachmentAssetKendaraanMotor') }}"/>
                        <div class="form-group">
                            <div class="mg-b-10">
                                <label class="form-control-label">Description:</label>
                                <input type="text" name='description' id="description" class="form-control">
                            </div>
                            <div>
                                <label class="form-control-label">Upload File: <span class="tx-danger">*</span></label>
                                <label class="custom-file">
                                    <input type="hidden" name="AttachmentId"/>
                                    <input type="hidden" name="AssetKendaraanMotorId" value="{{ asset_kendaraan_motor.id }}"/>
                                    <input type="file" name='ufile' id="ufile" class="custom-file-input">
                                    <span class="custom-file-control"></span>

                                </label>
                            </div>
                            
                        </div>
                    </div><!-- col-4 -->
                </div><!-- row -->
                <div class="form-layout-footer">
                    <button type="submit" class="btn btn-info mg-r-5">Add</button>
                    <button type="button" id='btnCancelAttachment' class="btn btn-secondary">Cancel</button>
                </div><!-- form-layout-footer -->
            </div><!-- form-layout -->
        </form>
    </div><!-- card -->
</div><!-- am-pagebody -->

<div class="am-pagebody">
    <div class="card pd-20 pd-sm-40">
     <form method="post"  action='{{ path('asset_kendaraan_motor_attacment_delete') }}' id='frmEmpDelAttachments' onsubmit="return confirm('Are you sure you want to delete this item?');" >
        <div class="row">
            <div class="col-lg-6">
                <h6 class="card-body-title">Attachment List</h6>
                <p class="mg-b-20 mg-sm-b-30">Attachment Asset Kendaraan Motor List</p>
            </div>
            <div class="col-lg-6" id='attachmentActions' style="text-align: right;margin-bottom: 10px;">
                <a class="btn btn-primary" id='btnAddAttachment' href="#addPaneAttachments">Add</a>
                <button class="btn btn-danger mg-x-10" id='btnDeleteAttachment'>Delete</button>
            </div>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover table-bordered mg-b-0" id="tblAttachments">
                <thead>
                    <tr>
                        <th>
                            <label class="ckbox mg-b-0" class='checkboxAtch'>
                                <input type="checkbox" id='checkAll'><span></span>
                            </label>
                        </th>
                        <th>File Name</th>
                        <th>Description</th>
                        <th>Attach By</th>
                        <th>Attach Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {% set attachment_asset_kendaraan_motors =  asset_kendaraan_motor.Attachment %}
                    {% for attachment_asset_kendaraan_motor in attachment_asset_kendaraan_motors %}
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="AssetKendaraanMotorId" value="{{ asset_kendaraan_motor.id }}"/>
                        <input type="hidden" name="_token" value="{{ csrf_token('delete') }}">
                        <tr>
                            <td>
                                <label class="ckbox mg-b-0" class='checkboxAtch'>
                                    <input type='checkbox' class='checkbox' name='chkAssetKendaraan[]' value={{ attachment_asset_kendaraan_motor.Id}}/><span></span>
                                </label>    
                            </td>
                            <td><a href="{{ path('asset_kendaraan_motor_download_attachment', {'id': attachment_asset_kendaraan_motor.Id,'AssetKendaraanMotorId':asset_kendaraan_motor.id }) }}">{{ attachment_asset_kendaraan_motor.getAttachFilename|default('')}}</a></td>
                            <td>{{ attachment_asset_kendaraan_motor.getAttachDesc}}</td>
                            <td>{{ attachment_asset_kendaraan_motor.getAttachedBy.getFullName|default('') }}</td>
                            <td>{{ attachment_asset_kendaraan_motor.attach_time|default( "now"|date("m/d/Y"))}}</td>
                            <td>
                                <div class="row editLink" style="text-align:right">
                                    <a href="#" class="btn btn-outline-primary btn-block"><i class="fa fa-pencil-square-o mg-r-10"></i> Edit</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </fomr>
    </div><!-- card -->
</div><!-- am-pagebody -->

