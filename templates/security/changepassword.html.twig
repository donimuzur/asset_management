{% extends 'base.html.twig' %}

{% block title %}Add Asset User{% endblock %}
{% set HeaderTitle = 'Change Password' %}
{% set FormTitle =  'Change Password'%}
{% set description = 'Change Password ' %}

{% block body %}
  <!-- Page Content -->
<div class="content">
    {{ include('_globalMessage.html.twig') }}
    <!-- Material Design -->
    <h2 class="content-heading">{{ HeaderTitle }}</h2>
    <div class="row">
        <div class="col-md-12">
            <!-- Static Labels -->
            <div class="block">
                <div class="block-header block-header-default">
                    <h3 class="block-title">{{ FormTitle }}</h3>
                </div>
                <div class="block-content">
                    <form id="frmSubmit"  method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('Security') }}"/>
                        <div class="row">
                            <div class="col-12 form-group">
                                <div class="form-material">
                                    <input type="password" name="old_password" id="old_password" placeholder="Enter your password" class="form-control" required/>
                                    <label>Old Password: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    <input type="password" name="new_password" id="new_password" placeholder="Enter your new password" class="form-control" required/>
                                    <label>New Password: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    <input type="password" name="new_password_confirm" id="new_password_confirm" class="form-control" required/>
                                    <label>New Password Confirmation: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-alt-primary mr-5">{{ button_label|default('Submit') }}</button>
                                <a href="{{ path('default') }}" class="btn btn-alt-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Static Labels -->
        </div>
    </div>
    <!-- END Material Design -->
</div>
<!-- END Page Content -->
      
{% endblock %}
