<!-- Page Content -->
<div class="content">
    {{ include('_globalMessage.html.twig') }}
    <!-- Material Design -->
    <h2 class="content-heading">{{ HeaderTitle }}</h2>
    <div class="row">
        <div class="col-md-12">
            <!-- Static Labels -->
            <div class="block">
                <div class="block-header block-header-default">
                    <h3 class="block-title">{{ FormTitle }}</h3>
                </div>
                <div class="block-content">
                    <form id="frmSubmit"  method="post">
                        <div class="row">
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    {{ form_widget(form.FullName, {'attr': {'class': 'form-control','placeholder':'Input your full name'}})}}
                                    <label>Full name: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material input-group input-group-lg">
                                    {{ form_widget(form.UserName, {'attr': {'class': 'form-control','placeholder':'Input your username'}})}}
                                    <label>Username: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    {{ form_widget(form.UserPassword, {'attr': {'class': 'form-control','placeholder':'Input your password'}})}}
                                    <label>Password: <span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    {{ form_widget(form.UserRoleId, {'attr': {'class': 'form-control select2','placeholder':'Input your password'}})}}
                                    <label>User Role:<span class="text-danger">*</span></label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    <label class="css-control css-control-secondary css-checkbox css-checkbox-rounded">
                                        {{ form_widget(form.Status, {'attr': {'class': 'css-control-input'}})}}
                                        <span class="css-control-indicator"></span> Aktif
                                    </label>
                                </div>
                            </div>
                            <div class="col-6 form-group">
                                <div class="form-material">
                                    <label class="css-control css-control-secondary css-checkbox css-checkbox-rounded">
                                        {{ form_widget(form.Deleted, {'attr': {'class': 'css-control-input'}})}}
                                        <span class="css-control-indicator"></span> Is Deleted:
                                    </label>
                                </div>
                            </div>
                        </div>
                         {{ form_rest(form) }}
                        <div class="form-group row">
                            <div class="col-md-9">
                                <button type="submit" class="btn btn-alt-primary mr-5">{{ button_label|default('Submit') }}</button>
                                <a href="{{ path('master_asset_user_index') }}" class="btn btn-alt-secondary">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Static Labels -->
        </div>
    </div>
    <!-- END Material Design -->
</div>
<!-- END Page Content -->
      